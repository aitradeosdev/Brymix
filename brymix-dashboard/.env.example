# Production Environment Variables for Vercel

# MongoDB Configuration (Replace with your MongoDB Atlas connection string)
MONGODB_URI=mongodb+srv://brymix-user:secure-password@cluster0.mongodb.net/brymix-dashboard?retryWrites=true&w=majority

# JWT Secrets (Generate new secure secrets for production)
JWT_SECRET=brymix_production_jwt_secret_ultra_secure_2024_enterprise_grade_key
JWT_REFRESH_SECRET=brymix_production_refresh_jwt_ultra_secure_2024_enterprise_key

# FastAPI Backend URL (Your existing FastAPI deployment)
FASTAPI_URL=https://your-fastapi-deployment.com

# Server Configuration
NODE_ENV=production
PORT=5000

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=brymix_production_session_secret_ultra_secure_2024_enterprise

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS Origins
CORS_ORIGINS=https://urdomain.com

# Logging
LOG_LEVEL=info

# Encryption
ENCRYPTION_KEY=brymix_production_encryption_key_ultra_secure_2024_enterprise_32_chars