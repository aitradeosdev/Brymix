# JWT Secrets (Generate strong secrets for production)
JWT_SECRET=brymix_jwt_super_secure_secret_key_2024_production_ready_enterprise_grade
JWT_REFRESH_SECRET=brymix_refresh_jwt_ultra_secure_secret_key_2024_enterprise_production

# FastAPI Backend URL
FASTAPI_URL=http://localhost:8000

# Server Configuration
NODE_ENV=development
PORT=5000

# Security
